	<!-- 配置认证管理器 -->
	<authentication-manager>
		<authentication-provider user-service-ref="userDetailService">
		</authentication-provider>
		
	</authentication-manager>
	<beans:bean id="secretaryService"
		class="cn.sjxy.overdue.secretary.service.SecretaryServiceImpl"></beans:bean>

	<beans:bean id="userDetailService"
		class="cn.sjxy.overdue.secretary.service.UserDetailServiceImpl">
		<beans:property name="secretaryService" ref="secretaryService"></beans:property>
	</beans:bean>
